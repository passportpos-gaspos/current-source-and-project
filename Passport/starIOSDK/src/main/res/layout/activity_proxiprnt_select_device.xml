<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProxiPRNTDeviceSettingsActivity" >

    <ListView
        android:id="@+id/listView_usb_printer_proxiprnt"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:divider="#555555"
        android:dividerHeight="3sp" >
    </ListView>

    <ListView
        android:id="@+id/listView_discover_deviced_proxiprnt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/listView_usb_printer_proxiprnt"
        android:layout_below="@+id/textView_discovered_device"
        android:divider="#555555"
        android:dividerHeight="3sp" >

    </ListView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listView_usb_printer_proxiprnt"
        android:layout_alignLeft="@+id/listView_usb_printer_proxiprnt"
        android:text="USB Printer"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView_proxiprnt_device_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Select Device"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView_discovered_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listView_discover_deviced_proxiprnt"
        android:layout_below="@+id/textView_proxiprnt_device_settings"
        android:text="Discovered Device"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>