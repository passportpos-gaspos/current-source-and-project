<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="1" >

        <TableRow android:baselineAligned="false" >

            <TextView
                android:id="@+id/typeLabel"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:padding="6dp"
                android:text="Button Type:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/typeSelect"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow android:id="@+id/parentRow" >

            <TextView
                android:id="@+id/parentLabel"
                android:layout_gravity="center|left"
                android:padding="6dp"
                android:text="In Folder:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/parentSelect"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow android:id="@+id/departmentRow" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_gravity="center|left"
                android:padding="6dp"
                android:text="Department:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/departmentSelect"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow android:id="@+id/tenderTypeRow" >

            <TextView
                android:id="@+id/TextView03"
                android:layout_gravity="center|left"
                android:padding="6dp"
                android:text="Tender Type:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/tenderSelect"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow android:id="@+id/folderNameRow" >

            <TextView
                android:id="@+id/folderName"
                android:layout_gravity="center|left"
                android:padding="6dp"
                android:text="Folder Name:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/folderEdit"
                android:hint="Folder Name"
                android:inputType="text"
                android:padding="6dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow android:id="@+id/productSearchRow" >

            <TextView
                android:id="@+id/productLabel"
                android:layout_gravity="center|left"
                android:padding="6dp"
                android:text="Product:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <AutoCompleteTextView
                android:id="@+id/productSearch"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search for Product/ID"
                android:inputType="textPersonName"
                android:padding="6dp"
                android:singleLine="true"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" >
            </AutoCompleteTextView>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/orderLabel"
                android:layout_gravity="center|left"
                android:padding="6dp"
                android:text="Order Number:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/orderByEdit"
                android:hint="Order Number"
                android:inputType="number"
                android:padding="6dp"
                android:singleLine="true" >
            </EditText>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/imageLabel"
                android:layout_gravity="center|left"
                android:padding="6dp"
                android:text="Button Image:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="5dp"
                android:gravity="left" >

                <ImageView
                    android:id="@+id/button_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/button_yellow_back"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/button_selector" />
            </RelativeLayout>
        </TableRow>

        <TableRow android:id="@+id/multiItemRow" >

            <TextView
                android:id="@+id/TextView02"
                android:layout_gravity="center|left"
                android:padding="6dp"
                android:text="Multi-item list:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TableLayout
                android:id="@+id/itemTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </TableLayout>
  
        </TableRow>
    </TableLayout>

</ScrollView>