<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="1" >

        <TableRow>

            <TextView
                android:id="@+id/nameLabel"
                android:layout_gravity="center|left"
                android:padding="6dp"
                android:text="Product Name:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/nameEdit"
                android:hint="Product Name"
                android:inputType="text"
                android:padding="6dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/descLabel"
                android:layout_gravity="center|left"
                android:padding="6dp"
                android:text="Description:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/descEdit"
                android:hint="Description"
                android:inputType="text"
                android:padding="6dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/priceLabel"
                android:layout_gravity="center|left"
                android:padding="6dp"
                android:text="Price:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/priceEdit"
                android:hint="Price"
                android:inputType="numberSigned|numberDecimal"
                android:maxLength="6"
                android:padding="6dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/costLabel"
                android:layout_gravity="center|left"
                android:padding="6dp"
                android:text="Cost:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/costEdit"
                android:hint="Cost"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:padding="6dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/quantityLabel"
                android:layout_gravity="center|left"
                android:padding="6dp"
                android:text="On Hand:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/quantityEdit"
                android:hint="On Hand"
                android:inputType="number"
                android:padding="6dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/TextView01"
                android:layout_gravity="center|left"
                android:padding="6dp"
                android:text="Low Amount:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/lowFilter"
                android:hint="Low Amount"
                android:inputType="number"
                android:padding="6dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow android:baselineAligned="false" >

            <TextView
                android:id="@+id/catagoryLabel"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:padding="6dp"
                android:text="Department:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/catagoryselect"
                android:textAppearance="?android:attr/textAppearanceMedium" >

                <!-- Preview: listitem=@layout/spiner -->
            </Spinner>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/salePriceLabel"
                android:layout_gravity="center|left"
                android:padding="6dp"
                android:text="Barcode:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/barcode"
                android:hint="Barcode"
                android:inputType="text"
                android:padding="6dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow
            android:id="@+id/scanRow"
            android:visibility="gone" >

            <Button
                android:id="@+id/scanButton"
                android:layout_span="2"
                android:text="Scan Barcode"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/salePriceLabel2"
                android:layout_gravity="center|left"
                android:padding="6dp"
                android:text="Sale Price:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/salePriceEdit"
                android:hint="Sale Price"
                android:inputType="numberDecimal"
                android:padding="6dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/saleStartLabel"
                android:layout_gravity="center|left"
                android:padding="6dp"
                android:text="Sale Start Date"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/saleStartEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disabled"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/saleEndLabel"
                android:layout_gravity="center|left"
                android:padding="6dp"
                android:text="Sale End Date:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/saleEndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disabled"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>
    </TableLayout>

</ScrollView>