<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:background="@drawable/grid_color_selector"
    android:orientation="vertical">
    <!--    android:layout_width="278px"
        android:layout_height="157px"

        android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
        -->

    <FrameLayout
        android:id="@+id/frm_one"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:visibility="visible"
        >
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_alpha"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            >
            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_color"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                />
            <TextView
                android:id="@+id/text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Sampletext"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/white_color"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/discounticon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:visibility="gone"
                android:src="@drawable/discountsmall_icon"
                />
            <ImageView
                android:id="@+id/level_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:visibility="gone"
                android:src="@drawable/levelicon"
                />
            <ImageView
                android:id="@+id/una_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:visibility="gone"
                android:src="@drawable/unavailableicon"
                />
        </LinearLayout>
    </FrameLayout>

    <!--android:layout_width="300dp"
    android:layout_height="180dp"-->

    <FrameLayout
        android:id="@+id/frm_two"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:visibility="visible"
        >
        <ImageView
            android:id="@+id/imageone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/text_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sampletext"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_gravity="left|top"
            android:textColor="@color/txt_setting_clr"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            >
            <TextView
                android:id="@+id/txt_price_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_setting_clr"
                android:textSize="16sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom|left|center_vertical"
                android:gravity="left|bottom|center_vertical"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom|right|center_vertical"
                android:gravity="right|bottom|center_vertical"
                >

                <ImageView
                    android:id="@+id/discounticon_one"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:visibility="gone"
                    android:src="@drawable/discountsmall_icon"
                    />
                <ImageView
                    android:id="@+id/level_icon_one"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:visibility="gone"
                    android:src="@drawable/levelicon"
                    />
                <ImageView
                    android:id="@+id/una_icon_one"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:visibility="gone"
                    android:src="@drawable/unavailableicon"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_showlevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="bottom|right"
            android:src="@drawable/ic_item_indicator"
            />
    </FrameLayout>
</LinearLayout>