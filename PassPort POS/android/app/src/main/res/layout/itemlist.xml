<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/item_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="1dip"
                android:text="@string/txt_name"
                android:singleLine="true"
                android:textAppearance="@style/textLayoutAppearance"
                android:textColor="#000000" >
            </TextView>

            <TextView
                android:id="@+id/item_price_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="1dip"
                android:text="@string/txt_price_0"
                android:textAppearance="@style/textLayoutAppearance"
                android:textColor="#000000" >
            </TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/item_desc_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="1dip"
                android:singleLine="true"
                android:text="@string/msg_old_system"
                android:textAppearance="@style/textLayoutAppearance"
                android:textColor="@android:color/black" >
            </TextView>

            <TextView
                android:id="@+id/quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="1dip"
                android:text="@string/txt_available_0"
                android:textAppearance="@style/textLayoutAppearance"
                android:textColor="@android:color/black" >
            </TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="true" >

            <TextView
                android:id="@+id/barcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:padding="1dip"
                android:text="10010110"
                android:textAppearance="@style/textLayoutAppearance"
                android:textColor="#000000" >
            </TextView>

            <TextView
                android:id="@+id/catagory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="1dip"
                android:text="@string/txt_category"
                android:textAppearance="@style/textLayoutAppearance"
                android:textColor="#000000" >
            </TextView>
        </TableRow>
        
        <TableRow>
            <TextView
                android:id="@+id/receiptPrintOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="1dip"
                android:singleLine="true"
                android:text="@string/txt_receipt_print_option"
                android:textAppearance="@style/textLayoutAppearance"
                android:textColor="#000000" >
            </TextView>
        </TableRow>
    </TableLayout>

</LinearLayout>