<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:textColor="@color/txt_setting_clr"
            android:textSize="18sp"
            android:text="@string/txt_return" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="10dp"
            android:src="@color/gray_200"/>
    </LinearLayout>

    <TextView
        style="@style/borderMarginBottom"
        android:id="@+id/alert_message_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20dp"
        android:textColor="@color/txt_setting_clr"
        android:text="@string/msg_return_sale"/>

    <EditText
        android:id="@+id/reason_edit_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="5dp"
        android:textColor="@color/txt_setting_clr"
        android:textColorHint="@android:color/darker_gray"
        android:hint="@string/txt_reason" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:text="@string/txt_cancel"
            android:background="@color/pos_button_color"/>

        <Button
            android:id="@+id/return_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:background="@color/pos_button_color"
            android:text="@string/txt_return" />

    </LinearLayout>

</LinearLayout>