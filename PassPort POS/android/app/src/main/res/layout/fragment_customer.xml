<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/customer_first_name_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="@string/txt_first_name"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:textColor="@color/txt_setting_clr"
                android:minLines="2" />
            <EditText
                android:id="@+id/customer_last_name_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="@string/txt_last_name"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:textColor="@color/txt_setting_clr"
                android:minLines="2" />
            </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/txt_setting_clr"
        android:text="@string/txt_email"/>

    <EditText
        android:id="@+id/customer_email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:hint="@string/txt_email"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/txt_setting_clr"
        android:layout_marginRight="20dp"
        android:padding="5dp"
        android:minLines="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/txt_setting_clr"
        android:text="@string/txt_phone"/>

    <EditText
        android:id="@+id/customer_phone_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:hint="@string/txt_phone"
        android:inputType="phone"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/txt_setting_clr"
        android:layout_marginRight="20dp"
        android:padding="5dp"
        android:minLines="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:text="@string/txt_cancel"
            android:background="@color/pos_button_color"/>

        <Button
            android:id="@+id/customer_save_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:background="@color/pos_button_color"
            android:text="@string/txt_save" />

    </LinearLayout>

</LinearLayout>
