<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

   <!--android:layout_marginTop="18dp"
   android:layout_marginLeft="10dp"
   android:layout_marginRight="18dp"-->

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="#f2f2f2"
       android:orientation="horizontal"
       android:layout_gravity="center_vertical|right"
       android:gravity="center_vertical|right">

      <ImageView
          android:id="@+id/back_image_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_arrow_left"
          android:visibility="gone"
          android:paddingRight="10dp"/>

      <ImageView
          android:id="@+id/imgview"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="center|center_vertical"
          android:src="@drawable/ic_search_counter"
          />
      <EditText
          android:id="@+id/search"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_gravity="end"
          android:maxWidth="120dp"
          android:layout_weight="1"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          android:hint="Search by order number"
          android:gravity="center_vertical"
          android:background="#f2f2f2"
          android:visibility="visible"/>
      <ImageView
          android:id="@+id/img_close"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:visibility="visible"
          android:layout_gravity="center_vertical"
          android:src="@drawable/ic_popup_close_18dp"

          />
   </LinearLayout>
   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   <ListView
       android:id="@+id/ff_order_list_view"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@android:color/white"/>
      <ImageView
          android:id="@+id/prepage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/arrow_left_bold"
          android:layout_gravity="center_vertical|left"
          android:padding="20dp"
          />
      <ImageView
          android:id="@+id/nextpage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/arrow_right_bold"
          android:layout_gravity="center_vertical|right"
          android:padding="20dp"
          />
   </FrameLayout>
</LinearLayout>