<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alert_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:textColor="@color/gray_850"
            android:textSize="18sp"
            android:text="Alert" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="10dp"
            android:src="@color/gray_200"/>
    </LinearLayout>

    <TextView
        style="@style/borderMarginBottom"
        android:id="@+id/alert_message_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="25dp"
        android:text="Message"
        android:background="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/keypadStyle"
            android:id="@+id/alert_cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            android:gravity="center"
            android:textSize="@dimen/ten_top"
            android:textColor="@color/red_600"
            android:text="@android:string/cancel"
            android:background="@drawable/button_white_gray_border" />

        <Button
            style="@style/keypadBottomStyle"
            android:id="@+id/alert_ok_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="fill"
            android:padding="20dp"
            android:gravity="center"
            android:textSize="@dimen/ten_top"
            android:textColor="@color/button_green_background"
            android:text="@android:string/ok"
            android:background="@drawable/button_white_gray_border" />
    </LinearLayout>

</LinearLayout>