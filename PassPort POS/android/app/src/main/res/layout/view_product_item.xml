<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/selected_back"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="9dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="0.01dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_name_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:padding="1dip"
                    android:text="@string/txt_name"
                    android:textAppearance="@style/textLayoutAppearance"
                    android:textColor="#4d4d4d"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_desc_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:padding="1dip"
                    android:text="@string/msg_old_system"
                    android:textAppearance="@style/textLayoutAppearance"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:padding="1dip"
                    android:singleLine="true"
                    android:text="@string/txt_lbl_price"
                    android:textColor="#000000"
                    android:textAppearance="@style/textLayoutAppearance" />

                <TextView
                    android:id="@+id/item_price_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:padding="1dip"
                    android:singleLine="true"
                    android:text="@string/txt_price_0"
                    android:textAppearance="@style/textLayoutAppearance"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:padding="1dip"
                    android:singleLine="true"
                    android:text="@string/txt_lbl_barcode"
                    android:textAppearance="@style/textLayoutAppearance"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/barcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:padding="1dip"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="-"
                    android:textAppearance="@style/textLayoutAppearance"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:padding="1dip"
                    android:singleLine="true"
                    android:text="@string/txt_lbl_quanty"
                    android:textAppearance="@style/textLayoutAppearance"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:padding="1dip"
                    android:singleLine="true"
                    android:text="0"
                    android:textAppearance="@style/textLayoutAppearance"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/receiptPrintOption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:padding="1dip"
                    android:singleLine="true"
                    android:text="@string/txt_department"
                    android:textAppearance="@style/textLayoutAppearance"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/catagory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:padding="1dip"
                    android:singleLine="true"
                    android:text="@string/txt_category"
                    android:textAppearance="@style/textLayoutAppearance"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>