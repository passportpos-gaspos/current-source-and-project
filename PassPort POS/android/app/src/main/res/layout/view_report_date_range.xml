<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reports_linear_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:background="@android:color/white">
    <TextView
        android:id="@+id/lbl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="23sp"
        android:gravity="center|center_vertical|center_horizontal"
        android:layout_gravity="center|center_vertical|center_horizontal"
        android:textStyle="bold"
        android:text="End of Shift"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        >

    <Button
        android:id="@+id/from_date_text_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="@string/txt_date"
        android:background="#e6e6e6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:text="TO"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:id="@+id/textView"
         />

    <Button
        android:id="@+id/to_date_text_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/txt_date"
        android:background="#e6e6e6"
        android:layout_alignBottom="@+id/from_date_text_view"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />
</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center|top"
        >

    <Button
        android:id="@+id/submit_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/textLayoutAppearance"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/button_blue"
        android:padding="5dp"
        android:text="@string/txt_submit"

        />

    <Button
        android:id="@+id/report_print_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/textLayoutAppearance"
        android:textStyle="bold"

        android:background="@drawable/border_rect_blue"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textColor="#0d6696"
        android:text="@string/txt_print"
        android:layout_alignBottom="@+id/from_date_text_view"
        android:layout_alignParentRight="true" />
</LinearLayout>
</LinearLayout>