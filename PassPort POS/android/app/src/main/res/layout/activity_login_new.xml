<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/borderMarginFull"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <!--android:background="@drawable/border"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/reg_top"
        >
        <ImageView
            android:layout_width="@dimen/logo_ll_widht"
            android:layout_height="@dimen/logo_ll_height"
            android:gravity="center|center_vertical|center_horizontal"
            android:layout_gravity="center|center_vertical|center_horizontal"
            android:textColor="@android:color/black"
            android:text="@string/txt_regtop"
            android:background="@drawable/top_icon"
            />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"

        >
        <!--style="@style/Base.Widget.AppCompat.Spinner.Underlined"-->
        <Spinner
            android:id="@+id/cashier_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/spin_ll_minwidht"
            android:layout_gravity="center|top"
            android:gravity="left|center_vertical"
            android:prompt="@string/txt_cashier_prompt"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="2.2dp"
            android:minWidth="@dimen/spin_ll_minwidht"
            android:background="@color/gray_400"
            />
        </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:gravity="center|top"
        android:layout_gravity="center|top"
        android:layout_marginTop="25dp"
        >
            <Button
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="275dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="22sp"
                android:textColor="#0d6696"
                android:background="@drawable/border_rect_blue"
                android:gravity="center|center_vertical|center_horizontal"
                android:layout_gravity="center|center_vertical|center_horizontal"
                android:text="@string/txt_login" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_height"
    android:background="#00AAE5"
   >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_vertical|center_horizontal"
        android:layout_gravity="center|center_vertical|center_horizontal"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:text="@string/txt_regbottom"
        />

</LinearLayout>
</LinearLayout>