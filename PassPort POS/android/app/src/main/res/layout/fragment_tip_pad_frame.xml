<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/secondary_color"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_400"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">
        <ImageView
            android:id="@+id/close_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:src="@drawable/ic_window_close_img"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:text="@string/txt_amount_due_label"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/sys_button_text_big" />

        <TextView
            android:id="@+id/amount_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:text="$00.00"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/sys_button_text_big" />
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/no_tip_ll"
                    android:layout_width="175dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_blue_gray_back"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/txt_no_tip"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/notip_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/txt_price_tip_0"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tip_one_ll"
                    android:layout_width="175dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_blue_gray_back"
                    android:gravity="center"
                    android:clickable="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tip_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/txt_tip_one"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tip_one_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/txt_price_tip_0"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tip_two_ll"
                    android:layout_width="175dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_blue_gray_back"
                    android:gravity="center"
                    android:clickable="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tip_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/txt_tip_two"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tip_two_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/txt_price_tip_0"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tip_three_ll"
                    android:layout_width="175dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_blue_gray_back"
                    android:gravity="center"
                    android:clickable="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tip_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/txt_tip_three"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tip_three_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/txt_price_tip_0"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tip_custom_ll"
                    android:layout_width="175dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_blue_gray_back"
                    android:gravity="center"
                    android:clickable="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tip_custom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/txt_custom"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tip_custom_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/txt_tip_amount"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/txt_hint_sign"
                android:textColor="#D9D9D9"
                android:textSize="40sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_window_close_img_gray"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_vertical"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:ellipsize="none"
                        android:gravity="center|center_vertical"
                        android:text="@string/txt_agree_pay_line"
                        android:textColor="#D9D9D9"
                        android:textSize="40sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/txt_agree_pay"
                    android:textColor="#D9D9D9"
                    android:textSize="22sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|center_vertical"
                android:layout_gravity="center|center_vertical"
                >
                <LinearLayout
                    android:id="@+id/clear_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/border_blue_gray_back"
                    android:gravity="center"
                    android:clickable="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:paddingTop="32dp"
                        android:paddingBottom="32dp"
                        android:paddingLeft="75dp"
                        android:paddingRight="75dp"
                        android:text="@string/txt_clear_sign"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="24sp" />

            </LinearLayout>
                <LinearLayout
                    android:id="@+id/accept_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/border_blue_gray_back"
                    android:gravity="center"
                    android:clickable="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:paddingTop="32dp"
                        android:paddingBottom="32dp"
                        android:paddingLeft="75dp"
                        android:paddingRight="75dp"
                        android:text="@string/txt_accept_sign"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="24sp" />
                </LinearLayout>
                </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>